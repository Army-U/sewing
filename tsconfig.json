{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "ESNext",
    "lib": [
      "es2017",
      "es2016",
      "dom"
    ]
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": [
    "node_modules"  
  ]
}
